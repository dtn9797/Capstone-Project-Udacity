<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

    </style >

    <style name="product_grid_title" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="product_grid_subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textStyle">bold</item>
    </style>

    <!--product_viewholder-->
    <style name="product_title" parent="TextAppearance.AppCompat.Headline">

    </style>
    <style name="product_subtitle" parent="TextAppearance.AppCompat.Body2">

    </style>

    <style name="menu_item" parent="product_grid_subtitle">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--activity detail-->
    <style name="price_tag" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="submit_button" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
